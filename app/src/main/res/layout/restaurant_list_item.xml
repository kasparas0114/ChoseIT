<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/tv_restaurantListItem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Title"
        android:layout_marginLeft="66dp"
        android:layout_marginStart="66dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_restaurantListItem_image"
        android:layout_toEndOf="@+id/iv_restaurantListItem_image" />

    <TextView
        android:id="@+id/tv_restaurantListItem_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Description"
        android:layout_below="@+id/tv_restaurantListItem_title"
        android:layout_alignLeft="@+id/tv_restaurantListItem_title"
        android:layout_alignStart="@+id/tv_restaurantListItem_title" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_restaurantListItem_image"
        android:layout_alignBottom="@+id/tv_restaurantListItem_description"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>